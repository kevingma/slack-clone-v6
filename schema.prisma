datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Step 1: Temporarily allow ChatMessage.channelId to be optional
//   so we can migrate existing data into a channel without error.
//   We'll revert it back to required in a follow-up migration.

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  username     String?
  chatMessages ChatMessage[]
}

model Channel {
  id           Int           @id @default(autoincrement())
  name         String
  createdAt    DateTime      @default(now())
  chatMessages ChatMessage[]
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  // Temporarily optional:
  channelId Int?
  channel   Channel? @relation(fields: [channelId], references: [id])
}
